<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_home">

  <fragment
      android:id="@+id/nav_home"
      android:label="HomeFragment"
      android:name="com.tarripoha.android.ui.main.HomeFragment"
      tools:layout="@layout/fragment_home">

    <action
        android:id="@+id/action_HomeFragment_to_SearchFragment"
        app:destination="@+id/nav_search" />
    <action
        android:id="@+id/action_HomeFragment_to_WordDetailFragment"
        app:destination="@id/nav_word_detail" />

  </fragment>

  <fragment
      android:id="@+id/nav_search"
      android:label="SearchFragment"
      android:name="com.tarripoha.android.ui.main.SearchFragment"
      tools:layout="@layout/fragment_search">
    <action
        android:id="@+id/action_SearchFragment_to_WordDetailFragment"
        app:destination="@id/nav_word_detail" />
  </fragment>

  <fragment
      android:id="@+id/nav_word_detail"
      android:label="WordDetailFragment"
      android:name="com.tarripoha.android.ui.main.WordDetailFragment"
      tools:layout="@layout/fragment_word_detail">
    <action
        android:id="@+id/action_WordDetailFragment_to_SearchFragment"
        app:destination="@id/nav_search" />
  </fragment>

</navigation>