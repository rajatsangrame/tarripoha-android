<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.tarripoha.android.ui.main.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_SearchFragment"
            app:destination="@+id/nav_search" />

        <action
            android:id="@+id/action_HomeFragment_to_WordListFragment"
            app:destination="@+id/nav_wordList" />

    </fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.tarripoha.android.ui.main.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_wordList"
        android:name="com.tarripoha.android.ui.main.WordListFragment"
        android:label="WordListFragment"
        tools:layout="@layout/layout_rv_with_swipe" />

</navigation>
