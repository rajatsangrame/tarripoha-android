<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.FullScreen" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="AppTheme.TextTitle" parent="TextAppearance.AppCompat.Title">
    <item name="android:fontFamily">@font/montserrat_extra_bold</item>
  </style>

  <style name="AppTheme.TextDesc" parent="AppTheme">
    <item name="android:fontFamily">@font/montserrat_medium</item>
    <item name="android:textColor">@color/colorGrey</item>
  </style>

  <style name="AppTheme.TextDescBlack" parent="AppTheme">
    <item name="android:fontFamily">@font/montserrat_medium</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <style name="AppTheme.TextDescItalic" parent="AppTheme">
    <item name="android:fontFamily">@font/montserrat_medium_italic</item>
    <item name="android:textColor">@color/colorGrey</item>
  </style>

  <style name="AppTheme.TextLabel" parent="AppTheme">
    <item name="android:fontFamily">@font/montserrat_bold</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <style name="BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@color/colorPureWhite</item>
  </style>


  <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
    <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
    <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    <item name="materialAlertDialogBodyTextStyle">@style/Alert.MaterialComponents.Body</item>
  </style>

  <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="rippleColor">@color/colorAccent</item>
    <item name="android:textColor">@color/colorRed</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="rippleColor">@color/colorAccent</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Alert.MaterialComponents.Body" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
    <item name="fontFamily">@font/montserrat_medium</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>
  </style>

</resources>
